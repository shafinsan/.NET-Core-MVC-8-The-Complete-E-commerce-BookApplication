@model List<CompanyModel>
<div class="row">
    <div class="col-lg-7 mx-auto">
        <div class="card border-0 shadow">
            <div class="card-body p-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <form asp-area="Admin" asp-controller="Company" asp-action="Index" method="get" class="form-inline my-2 my-lg-0 d-flex">
                        <input class="form-control mr-sm-1 m-auto h-25" type="search" name="SearchString"
                               placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success mx-1 my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    @if (User.IsInRole(StaticDetails.admin))
                    {
                        <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" class="btn btn-dark" type="button" data-toggle="tooltip" data-placement="top" title="Add New Book">
                            Add New Company
                        </a>
                    }
                </div>

                <!-- Responsive table -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered m-0">
                        <thead class="thead-dark">
                            <tr>
                                <th class="text-center">
                                    Name
                                </th>
                                <th class="text-center">Email</th>
                                <th class="text-center">Present Address</th>
                                <th class="text-center">Parmanent Address</th>
                                <th class="text-center">Postal Code</th>
                                <th class="text-center">Phone Number</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model)
                            {
                                <tr>
                                    <td class="text-center">@obj.CompanyName</td>
                                    <td class="text-center">@obj.Email</td>
                                    <td class="text-center">@obj.PresentAddress</td>
                                    <td class="text-center">@obj.ParmanentAddress</td>
                                    <td class="text-center">@obj.PostalCode</td>
                                    <td class="text-center">@obj.PhoneNumber</td>
                                    <td class="text-center">
                                        <ul class="list-inline m-0 d-flex">
                                            <li class="list-inline-item">
                                                <a asp-area="Admin" asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
