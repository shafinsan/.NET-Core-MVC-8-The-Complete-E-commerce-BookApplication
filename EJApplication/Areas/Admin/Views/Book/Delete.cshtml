@model BookModel
<div class="row">
    <div class="col-12">
        <!-- Display Image Section -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="col-4 m-auto">
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/Image/Book/noImage.jpg" : Model.ImageUrl)"
                     width="100%" style="border:2px solid black" alt="Product Image" />
            </div>
        }

        <!-- Form Start -->
        <form method="post" enctype="multipart/form-data">
            <!-- Hidden Fields for ID and Image URL -->
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.ImageUrl" />

            <!-- Title -->
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" readonly />
            </div>

            <!-- ISBN -->
            <div class="form-group">
                <label asp-for="@Model.ISBN" class="control-label">ISBN</label>
                <input asp-for="@Model.ISBN" class="form-control" readonly />
            </div>

            <!-- Description -->
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" readonly></textarea>
            </div>

            <!-- Author -->
            <div class="form-group">
                <label asp-for="@Model.Author" class="control-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" readonly />
            </div>

            <!-- List Price -->
            <div class="form-group">
                <label asp-for="@Model.ListPrice" class="control-label">List Price</label>
                <input asp-for="@Model.ListPrice" class="form-control" readonly />
            </div>

            <!-- Prices -->
            <div class="form-group">
                <label asp-for="@Model.Price" class="control-label">Price</label>
                <input asp-for="@Model.Price" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price50" class="control-label">Price50</label>
                <input asp-for="@Model.Price50" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Price100" class="control-label">Price100</label>
                <input asp-for="@Model.Price100" class="form-control" readonly />
            </div>

            <!-- Category -->
            <div class="form-group">
                <label asp-for="@Model.CategoryId" class="control-label">Category</label>
                <input asp-for="@Model.Category.Name" class="form-control" readonly />
            </div>
            <!-- Submit and Back Buttons -->
            <div class="form-group my-2">
                <button type="submit" class="btn btn-danger btn-sm mx-1">Delete</button>
                <a asp-controller="Book" asp-action="Index" class="btn btn-dark btn-sm mx-1">Back</a>
            </div>
        </form>
        <!-- Form End -->
    </div>
</div>
