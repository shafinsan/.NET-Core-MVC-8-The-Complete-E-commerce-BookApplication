@model CartAndOrderHeader
<form method="post">
    <input asp-for="@Model.total" value="@Model.total" hidden/>
    <div class="container">
        <div class="card shadow border-0">
            <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2 text-white">Shopping Cart</h5>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-outline-danger btn-sm">Back to Cart</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Shipping Details:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Name</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.Name" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.Name"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Phone</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.PhoneNumber" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.PhoneNumber"></span>
                                    
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Street Address</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.StreetAddress" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.StreetAddress"></span>
                                  
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>City</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.City" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.City"></span>
                                   
                                </div>
                                
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>State</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.State" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.State"></span>
                               
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Postal Code</label>
                                </div>
                                <div class="col-9">
                                    <input asp-for="@Model.order.PostalCode" class="form-control" />
                                    <span class="text-danger" asp-validation-for="@Model.order.PostalCode"></span>
                              
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-info">Order Summary:</span>
                            </h4>
                            <ul class="list-group mb-3">
                                @{
                                    int i = 0;
                                }
                                @foreach(var obj in Model.list)
                                {
                                    <input type="hidden" name="list[@i].Id" value="@obj.Id"/>
                                    <input type="hidden" name="list[@i].BookId" value="@obj.BookId" />
                                    <input type="hidden" name="list[@i].ApplicationId" value="@obj.ApplicationId" />
                                    <input type="hidden" name="list[@i].Price" value="@obj.Price" />
                                    <input type="hidden" name="list[@i].Count" value="@obj.Count" />
                                   
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            
                                            <h6 class="my-0">@obj.Book.Title</h6>
                                            <small class="text-muted">Quantity: @obj.Count</small>
                                        </div>

                                        <span class="text-muted">$@obj.Price</span>
                                    </li>
                                    i++;
                                }
                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small class="text-info">Total (USD)</small>
                                  
                                    <strong class="text-info">@Model.total.ToString("c")</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-8 pt-2">
                        <p style="color:maroon; font-size:14px;">
                            Estimate Arrival Date: @(DateTime.Now.AddDays(3).ToShortDateString())-@(DateTime.Now.AddDays(7).ToShortDateString())
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
